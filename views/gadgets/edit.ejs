<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-12">
			<h1 style="text-align:center;">Edit <%= gadget.name %></h1>
		</div>
		<div style="width:30%;margin:25px auto;">
			<form action="/gadgets/<%= gadget._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= gadget.name %>" name="gadget[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="gadget[price]" value="<%= gadget.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= gadget.image %>" name="gadget[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= gadget.description %>" name="gadget[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/gadgets">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>