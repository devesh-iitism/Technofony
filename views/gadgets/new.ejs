<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-12">
			<h1 style="text-align:center;">Create a New Gadget</h1>
		</div>
		
		<div style="width:30%;margin:25px auto;">
			<form action="/gadgets" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/gadgets">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>