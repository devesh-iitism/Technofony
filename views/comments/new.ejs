<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-12">
			<h1 style="text-align:center;">Add New Comment to <%= gadget.name %></h1>
		</div>
		<div style="width:30%;margin:25px auto;">
			<form action="/gadgets/<%= gadget._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Text" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/gadgets">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>